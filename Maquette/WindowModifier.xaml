<Window x:Class="Maquette.WindowModifier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Maquette"
        mc:Ignorable="d"
        Title="Modifier" Height="400" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl x:Name="TabModif">
            <TabItem Header="Matériel">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Categorie" Margin="5,0,0,0"/>
                    <ComboBox Padding="10,5,0,0" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,25,0,0">
                        <ComboBoxItem>IMPRIMANTE</ComboBoxItem>
                        <ComboBoxItem>PC PORTABLE</ComboBoxItem>
                        <ComboBoxItem>TOUR ORDINATEUR</ComboBoxItem>
                        <ComboBoxItem>PERIPHERIQUE</ComboBoxItem>
                    </ComboBox>
                    <Label Content="Code Barre" Margin="75,90,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,120,0,0"/>
                    <Label Content="Nom" Margin="75,145,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,170,0,0"/>
                    <Label Content="Reference Constructeur" Margin="75,200,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,225,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Catégorie">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Nom Categorie" Margin="75,90,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,120,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Attribution" Margin="0,0,0,0">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Personne" Margin="5,0,0,0"/>
                    <Label x:Name="ContenuEnseignant" Content="Damas Luc" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,24,0,0" Background="#FFF7FF00"/>
                    <Label Content="Matériel" Margin="5,70,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="ContenuMateriel" Content="APPLE MACBOOK AIR M2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="13,100,0,0" Background="#FFF7FF00"/>
                    <Label Content="Commentaire" Margin="75,140,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,170,0,0"/>
                    <Label Content="Date Attribution" Margin="75,200,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="25" Margin="80,225,0,0"/>
                </Grid>
            </TabItem>
            <TabItem Header="Personnel">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Nom" Margin="75,60,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,90,0,0"/>
                    <Label Content="Prenom" Margin="75,120,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,150,0,0"/>
                    <Label Content="Adresse Email" Margin="75,180,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,210,0,0"/>
                    <ComboBox Padding="10,5,0,0" Width="200" Height="30" VerticalAlignment="Top" Margin="0,20,20,0" HorizontalAlignment="Right">
                        <ComboBoxItem Content="Damas Luc"/>
                        <ComboBoxItem Content="Graziano Emmanuelle"/>
                        <ComboBoxItem Content="Colin Pascal"/>
                        <ComboBoxItem Content="Diard Benoit"/>
                    </ComboBox>
                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="annuler" Width="70" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10" Content="Annuler"/>
        <Button Width="70" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Content="Supprimer"/>
    </Grid>
</Window>
